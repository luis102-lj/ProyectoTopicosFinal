@model IEnumerable<ProoyectoTopicos.Models.Region>

@{
    ViewData["Title"] = "Regions";
}

<h1>Regions</h1>

<p>
    <a class="btn btn-dark" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegionDescription)
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegionDescription)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.RegionId">Edit</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.RegionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
